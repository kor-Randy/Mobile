<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/Create_Con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawHorizontalTrack="true">

    <LinearLayout
        android:id="@+id/CreatePromise_Linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/CreatePromise_Map"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/roomname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="방이름"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="338dp" />

            <EditText
                android:id="@+id/CreatePromise_EditText_Name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border_textview"
                android:ems="10"
                android:gravity="center"
                android:hint="ex)코딩만이 살길"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/promise_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="내용"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="338dp" />

            <EditText
                android:id="@+id/CreatePromise_EditText_Content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border_textview"
                android:ems="10"
                android:gravity="center"
                android:hint="미팅 내용"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/promise_place"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="장소"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="283dp" />

            <TextView
                android:id="@+id/CreatePromise_TextView_Place"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border_textview"
                android:gravity="center"
                android:hint="지도에서 위치를 누르세요"
                tools:layout_editor_absoluteX="364dp"
                tools:layout_editor_absoluteY="283dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/CreatePromise_EditText_ExtraAddress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border_textview"
                android:ems="10"
                android:gravity="center"
                android:hint="상세 주소를 입력하세요 ex) 투썸플레이스"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/promise_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="날짜"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="301dp" />

            <TextView
                android:id="@+id/CreatePromise_TextView_Date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border_textview"
                android:gravity="center"
                android:hint="날짜를 선택해주세요"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="364dp"
                tools:layout_editor_absoluteY="301dp" />

            <TextView
                android:id="@+id/CreatePromise_Button_Date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:gravity="center"
                android:text="날짜선택" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="시간"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="301dp" />

            <TextView
                android:id="@+id/CreatePromise_TextView_Time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border_textview"
                android:gravity="center"
                android:hint="시간을 선택해주세요"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/CreatePromise_Button_Time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:gravity="center"
                android:text="시간선택"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="참여자"
                android:textSize="15sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="320dp" />

            <TextView
                android:id="@+id/CreatePromise_TextView_Participant"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:background="@drawable/border_textview"
                android:gravity="center"
                android:hint="참여자"
                android:inputType="textMultiLine"

                tools:layout_editor_absoluteX="364dp"
                tools:layout_editor_absoluteY="338dp" />

            <TextView
                android:id="@+id/CreatePromise_Button_Invite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:gravity="center"
                android:text="+" />
        </LinearLayout>

    </LinearLayout>

    <net.daum.mf.map.api.MapView
            android:id="@+id/CreatePromise_Map"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/CreatePromise_Linear"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/CreatePromise_Button_Create"
            app:layout_constraintVertical_chainStyle="spread_inside">


    </net.daum.mf.map.api.MapView>

    <Button
            android:id="@+id/CreatePromise_Button_Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생성"
        android:background="@drawable/button_custom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CreatePromise_Map" />


</androidx.constraintlayout.widget.ConstraintLayout>