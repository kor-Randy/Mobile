<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Promise_con"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <net.daum.mf.map.api.MapView
        android:id="@+id/PromiseRoom_Map"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/middle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="68dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PromiseRoom_Map">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_textview"
                android:gravity="center"
                android:text="내용"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="338dp" />

            <TextView
                android:id="@+id/PromiseRoom_TextView_Content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border_textview"
                android:gravity="center"
                android:text="TextView"
                tools:layout_editor_absoluteX="364dp"
                tools:layout_editor_absoluteY="320dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_textview"
                android:gravity="center"
                android:text="장소"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="283dp" />

            <TextView
                android:id="@+id/PromiseRoom_TextView_Place"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border_textview"
                android:gravity="center"
                android:text="TextView"
                tools:layout_editor_absoluteX="364dp"
                tools:layout_editor_absoluteY="283dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_textview"
                android:gravity="center"
                android:text="날짜/시간"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="301dp" />

            <TextView
                android:id="@+id/PromiseRoom_TextView_Time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border_textview"
                android:gravity="center"
                android:text="TextView"
                tools:layout_editor_absoluteX="364dp"
                tools:layout_editor_absoluteY="301dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_textview"
                android:gravity="center"
                android:text="참여자"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="320dp" />

            <TextView
                android:id="@+id/PromiseRoom_TextView_Participant"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"

                android:background="@drawable/border_textview"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:text="TextView"

                tools:layout_editor_absoluteX="364dp"
                tools:layout_editor_absoluteY="338dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
