<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        >

    <LinearLayout
            android:id="@+id/linear_horizon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/Recommend_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="3dp"
                tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
                android:id="@+id/linear_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/Recommend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="place name"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/Recommend_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="address"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/Recommend_site"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="homepage site" />

            <TextView
                    android:id="@+id/Recommend_dist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="dist" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>