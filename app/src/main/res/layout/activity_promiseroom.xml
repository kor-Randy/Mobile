<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <net.daum.mf.map.api.MapView
            android:id="@+id/PromiseRoom_Map"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHeight_percent="0.5">


    </net.daum.mf.map.api.MapView>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  app:layout_constraintBottom_toTopOf="@+id/PromiseRoom_Button_ChatRoom"
                  app:layout_constraintTop_toBottomOf="@+id/PromiseRoom_Map"
                  app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent"
                  android:orientation="vertical" app:layout_constraintHeight_percent="0.3"
    android:layout_margin="20dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
        android:layout_weight="1">
            <TextView
                    android:text="내용"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/textView6"
                    tools:layout_editor_absoluteY="338dp"
                    tools:layout_editor_absoluteX="20dp"
                    android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/border_textview"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:id="@+id/PromiseRoom_TextView_Content"
                    tools:layout_editor_absoluteY="320dp"
                    tools:layout_editor_absoluteX="364dp"
                    android:gravity="center"
                    android:background="@drawable/border_textview"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                    android:text="장소"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" android:id="@+id/textView3"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteY="283dp" tools:layout_editor_absoluteX="20dp"
                    android:gravity="center"
                    android:background="@drawable/border_textview"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:id="@+id/PromiseRoom_TextView_Place"
                    tools:layout_editor_absoluteY="283dp"
                    tools:layout_editor_absoluteX="364dp"
                    android:gravity="center"
                    android:background="@drawable/border_textview"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                    android:text="날짜/시간"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/textView4"
                    tools:layout_editor_absoluteY="301dp"
                    tools:layout_editor_absoluteX="20dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/border_textview"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:id="@+id/PromiseRoom_TextView_Time"
                    tools:layout_editor_absoluteY="301dp"
                    tools:layout_editor_absoluteX="364dp"
                    android:gravity="center"
                    android:background="@drawable/border_textview"/>
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                    android:text="참여자"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/textView5"
                    tools:layout_editor_absoluteY="320dp"
                    tools:layout_editor_absoluteX="20dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/border_textview"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"

                    android:id="@+id/PromiseRoom_TextView_Participant"
                    tools:layout_editor_absoluteY="338dp"
                    tools:layout_editor_absoluteX="364dp"
            android:inputType="textMultiLine"

                    android:gravity="center"
                    android:background="@drawable/border_textview"/>
        </LinearLayout>

    </LinearLayout>

    <Button
            android:text="채팅"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/PromiseRoom_Button_ChatRoom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"
            app:layout_constraintHeight_percent="0.1"/>


</android.support.constraint.ConstraintLayout>