<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Pass"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" app:layout_constraintBaseline_toBaselineOf="@+id/Login_Edit_Password"
            app:layout_constraintEnd_toStartOf="@+id/Login_Edit_Password" android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"/>
    <TextView
            android:text="ID"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/Login_Edit_Id" android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="52dp" android:layout_marginStart="52dp" android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="ID"
            android:ems="10"
            android:id="@+id/Login_Edit_Id" android:layout_marginTop="124dp"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="********"
            android:ems="10"
            android:id="@+id/Login_Edit_Password" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/Login_Edit_Id" app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>